---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="hero-curve">
    <svg
      class="curved-shape"
      viewBox="0 0 900 600"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="
        M0,0 H900 V600 H0 Z
        M900,700
        A700,700 0 0,1 205,0
        L900,0 Z
      "
        fill="#e67e22"
        fill-rule="evenodd"></path>
    </svg>
    <div class="hero-image-slider">
      <img class="hero-bg-image active" src="/mv.jpg" alt="自画像1" />
      <img class="hero-bg-image" src="/mv3.png" alt="自画像2" />
    </div>
    <div class="hero-text">
      <div class="hero-label">Webエンジニア</div>
      <h1 class="hero-name">川崎浩史</h1>
      <div class="hero-catch">
        技術で人を幸せに。<br />UI/UX・フロントエンド・クラウドが得意です。
      </div>
    </div>
  </main>
  <style>
    .hero-curve {
      position: relative;
      height: calc(100dvh - 10vh);
      width: 100vw;
      min-width: 0;
      background: #fff;
      box-sizing: border-box;
    }
    .curved-shape {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
    }
    .hero-image-slider {
      position: absolute;
      top: 0;
      left: calc(205 / 900 * 100vw);
      width: calc(100vw - (205 / 900 * 100vw));
      height: 100%;
      overflow: hidden;
      z-index: 1;
    }
    .hero-bg-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: left center;
      opacity: 0;
      transition: opacity 1s;
      z-index: 1;
      pointer-events: none;
    }
    .hero-bg-image.active {
      opacity: 1;
      z-index: 1;
    }
    .curve-bg {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 100vw;
      height: 100vh;
      z-index: 1;
      pointer-events: none;
      background: none;
    }
    .hero-image-bg {
      position: absolute;
      inset: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0;
      overflow: hidden;
    }
    .hero-image-bg img {
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      display: block;
      filter: brightness(0.97) contrast(1.05);
    }
    .hero-content {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      z-index: 2;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      padding: 5rem 2rem 5rem 7vw;
      min-width: 340px;
      width: 50vw;
      max-width: 700px;
      color: #fff;
      text-shadow:
        0 4px 24px #fff,
        0 2px 8px rgba(0, 0, 0, 0.25);
    }
    .hero-content-overlay h1 {
      font-size: 3.5rem;
      margin-bottom: 0.5em;
      font-weight: 900;
      letter-spacing: 0.05em;
      color: #fff;
      text-shadow:
        0 4px 24px #fff,
        0 2px 8px rgba(0, 0, 0, 0.25);
    }
    .hero-content-overlay .subtitle {
      font-size: 1.6rem;
      color: #ffd700;
      margin-bottom: 1em;
      font-weight: bold;
      text-shadow:
        0 4px 24px #fff,
        0 2px 8px rgba(0, 0, 0, 0.25);
    }
    .hero-content-overlay .catch {
      font-size: 1.3rem;
      margin-bottom: 2em;
      color: #fff;
      text-shadow:
        0 4px 24px #fff,
        0 2px 8px rgba(0, 0, 0, 0.25);
    }
    .hero-buttons {
      display: flex;
      gap: 1em;
    }
    .btn {
      padding: 1.1em 2.5em;
      border-radius: 8px;
      background: linear-gradient(90deg, #e67e22 60%, #ffd700 100%);
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      border: none;
      font-size: 1.2rem;
      transition:
        background 0.2s,
        transform 0.2s;
    }
    .btn:hover {
      background: linear-gradient(90deg, #d35400 60%, #ffd700 100%);
      transform: translateY(-2px) scale(1.05);
    }
    .btn-secondary {
      background: #fff;
      color: #e67e22;
      border: 2px solid #e67e22;
      box-shadow: 0 2px 8px rgba(230, 126, 34, 0.1);
    }
    .btn-secondary:hover {
      background: #e67e22;
      color: #fff;
    }
    .hero-text {
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 50vw;
      min-width: 320px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      padding-left: 4vw;
      padding-top: 28vh;
      z-index: 3;
      color: #fff;
      text-shadow:
        0 4px 24px #e67e22,
        0 2px 8px rgba(0, 0, 0, 0.25);
      text-align: left;
    }
    .hero-label {
      font-size: 2vw;
      color: #ffd700;
      font-weight: bold;
      margin-bottom: 1.2em;
      text-shadow:
        0 2px 8px #e67e22,
        0 2px 8px rgba(0, 0, 0, 0.18);
    }
    .hero-name {
      font-size: 7vw;
      font-weight: 900;
      margin: 0 0 0.5em 0;
      letter-spacing: 0.05em;
      color: #fff;
      text-shadow:
        0 4px 24px #e67e22,
        0 2px 8px rgba(0, 0, 0, 0.25);
    }
    .hero-catch {
      font-size: 2vw;
      margin-bottom: 2em;
      color: #fff;
      text-shadow:
        0 4px 24px #e67e22,
        0 2px 8px rgba(0, 0, 0, 0.25);
    }
    .hero-buttons {
      display: flex;
      gap: 1em;
    }
    .hero-btn {
      padding: 1em 2.2em;
      border-radius: 8px;
      background: linear-gradient(90deg, #e67e22 60%, #ffd700 100%);
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      border: none;
      font-size: 1.5vw;
      transition:
        background 0.2s,
        transform 0.2s;
      margin-top: 0.5em;
    }
    .hero-btn:hover {
      background: linear-gradient(90deg, #d35400 60%, #ffd700 100%);
      transform: translateY(-2px) scale(1.05);
    }
    .hero-btn.secondary {
      background: #fff;
      color: #e67e22;
      border: 2px solid #e67e22;
      box-shadow: 0 2px 8px rgba(230, 126, 34, 0.1);
    }
    .hero-btn.secondary:hover {
      background: #e67e22;
      color: #fff;
    }
    @media (max-width: 900px) {
      .curve-bg,
      .hero-content,
      .hero-image-bg img {
        width: 100vw;
        min-width: 0;
        height: 30vh;
      }
      .hero-content {
        align-items: center;
        text-align: center;
        padding: 2rem 1rem;
        width: 100vw;
        max-width: 100vw;
      }
      .hero-image-bg img {
        min-width: 100vw;
        height: 40vh;
      }
      .hero-content-overlay h1 {
        font-size: 2.2rem;
      }
      .hero-content-overlay .subtitle {
        font-size: 1.1rem;
      }
      .hero-content-overlay .catch {
        font-size: 1rem;
      }
    }
  </style>
  <script>
    let idx = 0;
    const images =
      typeof window !== "undefined"
        ? document.querySelectorAll(".hero-bg-image")
        : [];
    if (images.length > 1) {
      setInterval(() => {
        images.forEach((img, i) => img.classList.toggle("active", i === idx));
        idx = (idx + 1) % images.length;
      }, 4000);
    }
  </script>
</Layout>
