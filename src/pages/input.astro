<script>
  // ãƒ‡ãƒ¼ã‚¿ã‚¿ã‚¤ãƒ—ã®é¸æŠã«å¿œã˜ã¦ãƒ•ã‚©ãƒ¼ãƒ ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã‚’è¡¨ç¤º/éè¡¨ç¤º
  document.addEventListener("DOMContentLoaded", function () {
    const dataTypeSelect = document.getElementById("dataType");
    const dataFields = document.querySelectorAll(".data-fields");

    function setDisabledForChildren(container: Element, disabled: boolean) {
      const elements = container.querySelectorAll(
        "input, select, textarea, button"
      );
      elements.forEach((el) => {
        (
          el as HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement
        ).disabled = disabled;
        if (disabled) {
          (el as any).required = false;
        }
      });
    }

    function updateVisibleFields(selectedType: string) {
      dataFields.forEach((field) => {
        const isTarget = field.id === `${selectedType}-fields`;
        if (isTarget) {
          (field as HTMLElement).classList.remove("hidden");
          setDisabledForChildren(field, false);
          // å¿…é ˆåˆ¶å¾¡: exerciseã®ç¨®ç›®ã¯å¯è¦–æ™‚ã®ã¿å¿…é ˆ
          const exerciseName = field.querySelector(
            'select[name="exercise_name_0"]'
          ) as HTMLSelectElement | null;
          if (exerciseName) exerciseName.required = true;
        } else {
          (field as HTMLElement).classList.add("hidden");
          setDisabledForChildren(field, true);
        }
      });
    }

    dataTypeSelect?.addEventListener(
      "change",
      function (this: HTMLSelectElement) {
        updateVisibleFields(this.value || "");
      }
    );

    // åˆæœŸçŠ¶æ…‹ã§ã‚‚éè¡¨ç¤ºãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã‚’ç„¡åŠ¹åŒ–
    const initialType =
      (dataTypeSelect as HTMLSelectElement | null)?.value || "";
    updateVisibleFields(initialType);

    // ç­‹ãƒˆãƒ¬ç¨®ç›®ã®è¿½åŠ 
    let exerciseIndex = 1;
    const addExerciseBtn = document.getElementById("add-exercise");
    const exerciseList = document.getElementById("exercise-list");

    if (addExerciseBtn && exerciseList) {
      addExerciseBtn.addEventListener("click", function () {
        const exerciseItem = document.createElement("div");
        exerciseItem.className = "exercise-item";
        exerciseItem.setAttribute("data-index", exerciseIndex.toString());
        exerciseItem.className =
          "exercise-item bg-gradient-to-br from-white/95 to-slate-50/95 border border-indigo-200/15 rounded-2xl p-6 mb-6 relative transition-all duration-300 ease-out shadow-lg backdrop-blur-sm";

        exerciseItem.innerHTML = `
          <div class="flex justify-between items-center mb-5 pb-3 border-b-2 border-indigo-200/10">
            <span class="font-bold text-indigo-600 text-base bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent drop-shadow-sm">ç¨®ç›® ${exerciseIndex + 1}</span>
            <button type="button" class="bg-gradient-to-br from-red-100 to-red-200 text-red-600 border border-red-200 rounded-lg w-7 h-7 flex items-center justify-center cursor-pointer text-lg font-bold transition-all duration-300 ease-out shadow-md hover:shadow-lg" onclick="removeExercise(this)">Ã—</button>
          </div>
          <div class="mb-6">
            <label class="block text-gray-700 font-bold mb-2">ç¨®ç›® *</label>
            <select name="exercise_name_${exerciseIndex}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" required>
              <option value="">ç¨®ç›®ã‚’é¸æŠã—ã¦ãã ã•ã„</option>
              ${(() => {
                const select = document.querySelector(
                  'select[name="exercise_name_0"]'
                ) as HTMLSelectElement;
                if (!select?.options) return "";
                return Array.from(select.options)
                  .map(
                    (option: HTMLOptionElement) =>
                      `<option value="${option.value}">${option.text}</option>`
                  )
                  .join("");
              })()}
            </select>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="mb-6">
              <label class="block text-gray-700 font-bold mb-2">å›æ•°</label>
              <input
                type="number"
                name="count_${exerciseIndex}"
                min="0"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                placeholder="å›æ•°"
              />
            </div>
            <div class="mb-6">
              <label class="block text-gray-700 font-bold mb-2">é‡é‡(kg)</label>
              <input
                type="number"
                name="weight_${exerciseIndex}"
                min="0"
                step="0.5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                placeholder="é‡é‡"
              />
            </div>
          </div>
        `;

        exerciseList.appendChild(exerciseItem);
        exerciseIndex++;
      });
    }

    // ç­‹ãƒˆãƒ¬ç¨®ç›®ã®å‰Šé™¤
    (window as any).removeExercise = function (button: any) {
      const exerciseItem = button.closest(".exercise-item");
      exerciseItem?.remove();

      // ç¨®ç›®ç•ªå·ã‚’å†è¨ˆç®—
      const exerciseItems = document.querySelectorAll(".exercise-item");
      exerciseItems.forEach((item, index) => {
        const numberSpan = item.querySelector(".exercise-number");
        if (numberSpan) {
          numberSpan.textContent = `ç¨®ç›® ${index + 1}`;
        }
        item.setAttribute("data-index", index.toString());

        // nameå±æ€§ã‚‚æ›´æ–°
        const select = item.querySelector("select") as HTMLSelectElement;
        const countInput = item.querySelector(
          'input[name^="count_"]'
        ) as HTMLInputElement;
        const weightInput = item.querySelector(
          'input[name^="weight_"]'
        ) as HTMLInputElement;

        if (select) select.name = `exercise_name_${index}`;
        if (countInput) countInput.name = `count_${index}`;
        if (weightInput) weightInput.name = `weight_${index}`;
      });

      exerciseIndex = exerciseItems.length;
    };

    // éå»ã®æœ¬ã‚’åæ˜ 
    const prevSelect = document.getElementById(
      "previous_book"
    ) as HTMLSelectElement | null;
    const applyPrevBtn = document.getElementById("apply_prev_book");
    const titleInput = document.getElementById(
      "title"
    ) as HTMLInputElement | null;
    const bookUrlInput = document.getElementById(
      "book_url"
    ) as HTMLInputElement | null;
    const sourceUrlInput = document.getElementById(
      "source_url"
    ) as HTMLInputElement | null;
    const sourceNameInput = document.getElementById(
      "source_name"
    ) as HTMLInputElement | null;

    function applyPreviousBook() {
      if (!prevSelect) return;
      const opt = prevSelect.selectedOptions[0];
      if (!opt || !opt.value) return;
      const title = opt.value;
      const book_url = opt.getAttribute("data-book_url") || "";
      const source_url = opt.getAttribute("data-source_url") || "";
      const source_name = opt.getAttribute("data-source_name") || "";
      if (titleInput) titleInput.value = title;
      if (bookUrlInput) bookUrlInput.value = book_url;
      if (sourceUrlInput) sourceUrlInput.value = source_url;
      if (sourceNameInput) sourceNameInput.value = source_name;
    }

    applyPrevBtn?.addEventListener("click", applyPreviousBook);
    prevSelect?.addEventListener("change", applyPreviousBook);
  });
</script>
