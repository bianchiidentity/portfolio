---
// Header component
---

<header class="header">
  <div class="header-content">
    <div class="header-left">
      <h1 class="name">かわさき浩史</h1>
      <div class="titles">
        <p>Webエンジニア</p>
      </div>
    </div>
    <nav class="header-nav">
      <ul class="nav-list">
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/profile" class="nav-link">プロフィール</a></li>
        <li><a href="/philosophy" class="nav-link">理念</a></li>
        <li><a href="/blog" class="nav-link">blog</a></li>
      </ul>
    </nav>
    <button class="hamburger" id="hamburger" aria-label="メニュー">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<script>
  const hamburger = document.getElementById("hamburger");
  const nav = document.querySelector(".header-nav");

  hamburger?.addEventListener("click", () => {
    hamburger.classList.toggle("active");
    nav?.classList.toggle("active");
  });
</script>

<style>
  .header {
    background-color: #f8f5f0;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    margin-top: 0;
    border-bottom: 2px solid #d0d0d0;
  }
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.7rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .header-left {
    display: flex;
    flex-direction: column;
    z-index: 101;
  }
  .name {
    font-size: 2.2rem;
    font-weight: bold;
    color: #222;
    margin: 0;
    line-height: 1.1;
  }
  .titles {
    margin-top: 0.3em;
  }
  .titles p {
    font-size: 1rem;
    color: #444;
    margin: 0;
    font-weight: normal;
  }
  .header-nav {
    display: flex;
    align-items: center;
  }
  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2.5rem;
  }
  .nav-link {
    color: #e67e22;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s;
  }
  .nav-link:hover {
    color: #d35400;
  }

  /* ハンバーガーメニュー */
  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 35px;
    height: 35px;
    justify-content: space-around;
    position: relative;
    z-index: 10;
  }

  .hamburger span {
    width: 100%;
    height: 4px;
    background-color: #e67e22;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }

    .header-content {
      padding: 1.2rem 4rem 1.2rem 2rem;
    }

    .header-nav {
      position: fixed;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100vh;
      background-color: #f8f5f0;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      transition: left 0.3s ease;
      padding: 2rem 0 0 0;
      box-sizing: border-box;
    }

    .header-nav.active {
      left: 0;
    }

    .nav-list {
      flex-direction: column;
      gap: 0;
      align-items: stretch;
      width: 100%;
      max-width: 40;
      margin-top: 4rem;
    }

    .nav-list li {
      border-bottom: 1px solid #e0e0e0;
      width: 100%;
    }
    .nav-list li:last-child {
      border-bottom: none;
    }

    .nav-link {
      font-size: 1.5rem;
      padding: 1.2rem 0;
      color: #e67e22;
      text-decoration: none;
      font-weight: 500;
      display: block;
      width: 100%;
      text-align: center;
    }
  }
</style>
