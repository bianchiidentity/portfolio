---
// Header component
---

<header class="header">
  <div class="header-content">
    <div class="header-left">
      <h1 class="name brush-name">川﨑浩史</h1>
      <span class="job-title">Webエンジニア</span>
    </div>
    <nav class="header-nav">
      <ul class="nav-list">
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/profile" class="nav-link">プロフィール</a></li>
        <li><a href="/philosophy" class="nav-link">理念</a></li>
        <li><a href="/blog" class="nav-link">blog</a></li>
      </ul>
    </nav>
    <button class="hamburger" id="hamburger" aria-label="メニュー">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<script>
  const hamburger = document.getElementById("hamburger");
  const nav = document.querySelector(".header-nav");

  hamburger?.addEventListener("click", () => {
    hamburger.classList.toggle("active");
    nav?.classList.toggle("active");
  });
</script>

<style>
  .header {
    background: linear-gradient(90deg, #f8f5f0 60%, #ffe4b5 100%);
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    margin-top: 0;
    border-bottom: 2px solid #d0d0d0;
    box-shadow: 0 4px 16px rgba(230, 103, 34, 0.08);
    height: 10vh;
    min-height: 70px;
  }
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 5vw;
    width: 100%;
    margin: 0;
    box-sizing: border-box;
    background: #fcfaf6;
    height: 100%;
  }
  .header-left {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.7vw;
    z-index: 101;
    position: relative;
    margin-left: 0;
  }
  .name {
    font-size: 2.8rem;
    font-weight: 900;
    color: #222;
    margin: 0;
    line-height: 1.1;
    letter-spacing: 0.04em;
    position: relative;
    z-index: 2;
    font-family: "Noto Sans JP", "Yu Gothic", "Meiryo", sans-serif;
  }
  .brush-name {
    font-size: 3.2rem;
    font-family: inherit;
    font-weight: 900;
    letter-spacing: 0.04em;
    color: #222;
    text-shadow: none;
  }
  .brush-name:hover {
    color: #e67e22;
    text-shadow:
      0 0 16px #ffd9a0,
      0 2px 0 #fff7e6;
  }
  .header-nav {
    display: flex;
    align-items: center;
    margin-right: 0;
    padding-right: 0;
    position: relative;
    right: 0;
    max-width: 60vw;
    justify-content: flex-end;
  }
  .nav-list {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 3.5rem;
    max-width: 100%;
    overflow-x: auto;
    box-sizing: border-box;
    justify-content: flex-end;
  }
  .nav-link {
    color: #e67e22;
    text-decoration: none;
    font-size: 1.7rem;
    font-weight: 900;
    letter-spacing: 0.04em;
    transition: color 0.2s;
    font-family: "Noto Sans JP", "Yu Gothic", "Meiryo", sans-serif;
  }
  .nav-link:hover {
    color: #d35400;
  }
  .job-title {
    font-size: 1.15rem;
    color: #444;
    margin-left: 0.7vw;
    font-weight: 700;
    white-space: nowrap;
    display: inline-block;
    vertical-align: bottom;
    font-family: "Noto Sans JP", "Yu Gothic", "Meiryo", sans-serif;
  }

  /* ハンバーガーメニュー */
  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 35px;
    height: 35px;
    justify-content: space-around;
    position: relative;
    z-index: 10;
  }

  .hamburger span {
    width: 100%;
    height: 4px;
    background-color: #e67e22;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }

    .header-content {
      padding: 0.6rem 2rem 0.6rem 2rem;
    }

    .header-nav {
      position: fixed;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100vh;
      background-color: #f8f5f0;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      transition: left 0.3s ease;
      padding: 2rem 0 0 0;
      box-sizing: border-box;
    }

    .header-nav.active {
      left: 0;
    }

    .nav-list {
      flex-direction: column;
      gap: 0;
      align-items: stretch;
      width: 100%;
      max-width: 40;
      margin-top: 4rem;
    }

    .nav-list li {
      border-bottom: 1px solid #e0e0e0;
      width: 100%;
    }
    .nav-list li:last-child {
      border-bottom: none;
    }

    .nav-link {
      font-size: 1.7rem;
      padding: 1.2rem 0;
      color: #e67e22;
      text-decoration: none;
      font-weight: 500;
      display: block;
      width: 100%;
      text-align: center;
    }
    .brush-name {
      font-size: 1.2rem;
    }
  }
</style>
