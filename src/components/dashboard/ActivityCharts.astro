---
// 活動グラフコンポーネント
import ReadingChart from "./chart/ReadingChart.astro";
import ExerciseChart from "./chart/ExerciseChart.astro";

const { exerciseData = [], bookData = [] } = Astro.props;
---

<section class="flex flex-col gap-4 w-full min-w-0">
  <!-- グラフセクション -->
  <div
    class="m-0 relative z-1 animate-fadeInUp animation-delay-500 w-full box-border"
  >
    <h2 class="text-2xl font-bold text-white mb-4 text-center drop-shadow-lg">
      📈 活動グラフ
    </h2>
    <div class="grid grid-cols-1 gap-3 w-full min-w-0">
      <ReadingChart bookData={bookData} />
      <ExerciseChart exerciseData={exerciseData} />
    </div>
  </div>
</section>

<style>
  @layer components {
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fadeInUp {
      animation: fadeInUp 0.8s ease-out;
    }

    .animation-delay-500 {
      animation-delay: 0.5s;
    }

    @media (max-width: 768px) {
      .charts-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
    }
  }
</style>
